[Unit]
Description=GitLab Unicorn Server
Requires=redis.service gitlab-tmpdir.service
Wants=postgresql-10.1.service
After=redis.service postgresql-10.1.service

[Service]
User=git
WorkingDirectory=/opt/gitlabhq-10.1
Environment=RAILS_ENV=production
SyslogIdentifier=gitlab-unicorn
PIDFile=/opt/gitlabhq-10.1/tmp/pids/unicorn.pid

ExecStart=/usr/bin/bundle exec "unicorn_rails -D -c /opt/gitlabhq-10.1/config/unicorn.rb -E production"

[Install]
WantedBy=multi-user.target